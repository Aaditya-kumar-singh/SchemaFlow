{
    "openapi": "3.0.0",
    "info": {
        "title": "Moon Modeler API",
        "version": "1.0.0",
        "description": "Production-ready API for Moon Modeler - Database schema design and reverse engineering platform",
        "contact": {
            "name": "API Support",
            "email": "support@moonmodeler.com"
        }
    },
    "servers": [
        {
            "url": "http://localhost:3000/api/v1",
            "description": "Development server"
        },
        {
            "url": "https://api.moonmodeler.com/v1",
            "description": "Production server"
        }
    ],
    "paths": {
        "/projects": {
            "get": {
                "summary": "List all projects",
                "description": "Get all projects for the authenticated user",
                "tags": [
                    "Projects"
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "$ref": "#/components/schemas/Project"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "summary": "Create a new project",
                "description": "Create a new database design project",
                "tags": [
                    "Projects"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CreateProjectRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Project created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/Project"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/ValidationError"
                    }
                }
            }
        },
        "/projects/{id}": {
            "get": {
                "summary": "Get project by ID",
                "description": "Retrieve a specific project with its diagram content",
                "tags": [
                    "Projects"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "description": "Project ID"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/Project"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "$ref": "#/components/responses/NotFound"
                    }
                }
            },
            "patch": {
                "summary": "Update project",
                "description": "Update project content with auto-save and optimistic locking",
                "tags": [
                    "Projects"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UpdateProjectRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Project updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "data": {
                                            "$ref": "#/components/schemas/Project"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "409": {
                        "$ref": "#/components/responses/Conflict"
                    }
                }
            }
        },
        "/import/mysql": {
            "post": {
                "summary": "Import MySQL schema",
                "description": "Reverse engineer a MySQL database schema into a diagram",
                "tags": [
                    "Import"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/MysqlImportRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Schema imported successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ImportResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "#/components/responses/ValidationError"
                    },
                    "500": {
                        "$ref": "#/components/responses/ServerError"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Project": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Unique project identifier (CUID)"
                    },
                    "name": {
                        "type": "string",
                        "description": "Project name"
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "MONGODB",
                            "MYSQL"
                        ],
                        "description": "Database type"
                    },
                    "content": {
                        "type": "object",
                        "description": "React Flow diagram state (nodes and edges)",
                        "properties": {
                            "nodes": {
                                "type": "array",
                                "items": {
                                    "type": "object"
                                }
                            },
                            "edges": {
                                "type": "array",
                                "items": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "version": {
                        "type": "integer",
                        "description": "Version number for optimistic locking"
                    },
                    "userId": {
                        "type": "string",
                        "description": "Owner user ID"
                    },
                    "teamId": {
                        "type": "string",
                        "nullable": true,
                        "description": "Team ID if shared project"
                    },
                    "createdAt": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updatedAt": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "CreateProjectRequest": {
                "type": "object",
                "required": [
                    "name",
                    "type"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "minLength": 1,
                        "maxLength": 100
                    },
                    "type": {
                        "type": "string",
                        "enum": [
                            "MONGODB",
                            "MYSQL"
                        ]
                    },
                    "teamId": {
                        "type": "string",
                        "nullable": true
                    }
                }
            },
            "UpdateProjectRequest": {
                "type": "object",
                "properties": {
                    "content": {
                        "type": "object",
                        "description": "Diagram content (nodes and edges)"
                    },
                    "version": {
                        "type": "integer",
                        "description": "Expected version for optimistic locking"
                    }
                }
            },
            "MysqlImportRequest": {
                "type": "object",
                "required": [
                    "host",
                    "port",
                    "user",
                    "password",
                    "database"
                ],
                "properties": {
                    "host": {
                        "type": "string",
                        "description": "Database host"
                    },
                    "port": {
                        "type": "integer",
                        "description": "Database port",
                        "default": 3306
                    },
                    "user": {
                        "type": "string",
                        "description": "Database username"
                    },
                    "password": {
                        "type": "string",
                        "description": "Database password"
                    },
                    "database": {
                        "type": "string",
                        "description": "Database name"
                    },
                    "ssh": {
                        "type": "object",
                        "description": "Optional SSH tunnel configuration",
                        "properties": {
                            "host": {
                                "type": "string"
                            },
                            "port": {
                                "type": "integer",
                                "default": 22
                            },
                            "username": {
                                "type": "string"
                            },
                            "password": {
                                "type": "string"
                            },
                            "privateKey": {
                                "type": "string"
                            }
                        }
                    }
                }
            },
            "ImportResponse": {
                "type": "object",
                "properties": {
                    "data": {
                        "type": "object",
                        "properties": {
                            "schema": {
                                "type": "object",
                                "description": "Diagram JSON (nodes and edges)",
                                "properties": {
                                    "nodes": {
                                        "type": "array"
                                    },
                                    "edges": {
                                        "type": "array"
                                    }
                                }
                            },
                            "warnings": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "description": "Non-critical warnings during import"
                            },
                            "unsupportedFeatures": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "description": "Features that couldn't be imported"
                            }
                        }
                    }
                }
            },
            "Error": {
                "type": "object",
                "properties": {
                    "error": {
                        "type": "object",
                        "properties": {
                            "code": {
                                "type": "string",
                                "description": "Error code"
                            },
                            "message": {
                                "type": "string",
                                "description": "Human-readable error message"
                            }
                        }
                    }
                }
            }
        },
        "responses": {
            "NotFound": {
                "description": "Resource not found",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        },
                        "example": {
                            "error": {
                                "code": "PROJECT_NOT_FOUND",
                                "message": "Project with id 'abc123' not found"
                            }
                        }
                    }
                }
            },
            "ValidationError": {
                "description": "Validation error",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        },
                        "example": {
                            "error": {
                                "code": "VALIDATION_ERROR",
                                "message": "Invalid request data"
                            }
                        }
                    }
                }
            },
            "Conflict": {
                "description": "Conflict (optimistic locking)",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        },
                        "example": {
                            "error": {
                                "code": "CONFLICT",
                                "message": "Project has been modified by another user. Reload required."
                            }
                        }
                    }
                }
            },
            "ServerError": {
                "description": "Internal server error",
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/Error"
                        },
                        "example": {
                            "error": {
                                "code": "INTERNAL_ERROR",
                                "message": "An unexpected error occurred"
                            }
                        }
                    }
                }
            }
        }
    }
}