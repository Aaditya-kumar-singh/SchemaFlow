# ============================================
# MOON MODELER BACKEND - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in the values

# ============================================
# SERVER CONFIGURATION
# ============================================
# Port for the backend server
PORT=3002

# Node environment (development | production | test)
NODE_ENV=development

# ============================================
# DATABASE
# ============================================
# PostgreSQL Database URL
# Neon (Cloud): postgresql://USER:PASSWORD@HOST/DATABASE?sslmode=require
# Local: postgresql://USER:PASSWORD@localhost:5432/DATABASE?schema=public
DATABASE_URL="postgresql://neondb_owner:YOUR_PASSWORD@YOUR_HOST.neon.tech/neondb?sslmode=require&connection_limit=10&pool_timeout=20"

# ============================================
# AUTHENTICATION
# ============================================
# NextAuth secret key (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"

# NextAuth URL (backend base URL)
NEXTAUTH_URL="http://localhost:3002"

# ============================================
# FRONTEND
# ============================================
# Frontend URL for CORS
FRONTEND_URL="http://localhost:3000"

# ============================================
# LOGGING
# ============================================
# Log level (debug | info | warn | error)
LOG_LEVEL=info

# ============================================
# RATE LIMITING
# ============================================
# Rate limits (requests per minute)
RATE_LIMIT_AUTH=5
RATE_LIMIT_IMPORT=10
RATE_LIMIT_SAVE=60

# ============================================
# SECURITY NOTES
# ============================================
# - Never commit .env file to git
# - Use strong, random values for secrets in production
# - Rotate secrets regularly
# - Use environment-specific values
